pipeline{
agent any
tools{
   maven 'maven3'
}

stages{
   stage('maven build'){
        when{
     branch "dev"
     }
    steps{
         sh "mvn clean package"
    }
   }
   stage('Upload to nexus'){
        when{
     branch "dev"
     }
    steps{
   script{
     def pom = readMavenPom file: 'pom.xml'
      
      def repository=pom.version.endsWith("SNAPSHOT") ? 'jyothihome-snapshot' : 'jyothihome-release'

      nexusArtifactUploader artifacts: 
      [[artifactId: 'myweb', classifier: '',file: "target/myweb-${pom.version}.war", type: 'war']], 
       credentialsId: 'admin', 
       groupId: 'in.javahome', 
       nexusUrl: '172.31.75.95:8081', 
       nexusVersion: 'nexus3', 
       protocol: 'http', 
       repository: repository,
       version: pom.version
      }
    }
   }
stage('dev-deploy'){
     when{
     branch "develop"
     }
     steps{
      echo "deploy to dev enironment"
        }
     }
     stage('uat-deploy'){
     when{
     branch "uat"
     }
     steps{
      echo "deploy to uat enironment"
        }
     }
     
     stage('prod-deploy'){
     when{
     branch "master"
     }
     steps{
      echo "deploy to prod enironment"
        }
     }
  }
}
