pipeline{
agent any
tools{
   maven 'maven3'
}

stages{
         stage('maven build'){
           steps{
               sh "mvn clean package"
          }
   }
   stage('Docker build image'){
             steps{
               sh "docker build -t jyothi/2021myapp:v1 . "
             }
   }
stage('push to docker hub'){
                          steps{
                              withCredentials([string(credentialsId: 'docker-hub', variable: 'dockerpassword')]) {
                         sh "docker login -u jyothi -p ${dockerpassword}"
                         sh "docker push  jyothi/2021myapp:v1"
                     }
      
        }
     }
     stage('dev-deploy'){
    
     steps{
      echo "deploy to dev enironment"
        }
     }
     
  }
}
